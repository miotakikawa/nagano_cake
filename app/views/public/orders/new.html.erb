<div class="container">
 <div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>注文情報入力</strong>
 </div>
</div>

<%= form_with model: @order, url: orders_confirm_path do |f| %>
<div>
 <strong>支払方法</strong>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>
</div>

<div>
 <strong>お届け先</strong>
 <%= f.radio_button :address, "my_address" %>
  <%= f.label :address, "ご自身の住所" %>
 <%= f.radio_button :address, "old_address" %>
  <%= f.label :address, "登録済み住所から選択" %>
 <%= f.radio_button :address, "new_address" %>
  <%= f.label :address, "新しいお届け先" %>
</div>
  <div class="center">
  <%= f.submit "確認画面に進む", class:'btn btn-primary' %>
  </div>
<% end %>
