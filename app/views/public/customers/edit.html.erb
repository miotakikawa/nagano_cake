<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>会員情報編集</strong> 
</div>
</div>

<%= form_with model: @customer, url: edit_custmoers_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.email_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)"%>
    <%= f.email_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="col-10">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
   <% end %>
  </div><br />
  
<div>
  <strong class="alert alert-dark col-5 d-flex" role="alert"></strong> 

  <%= render "退会する", class:"btn btn-success" %>
</div>