<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>配送先登録/一覧</strong> 
</div>
</div>　
   <table class="table">
   <div>
　　<% if @address.errors.any? %>
  　　　<%= @address.errors.count %>件のエラーが発生しました
  　　　<% @address.errors.full_messages.each do |message| %>
   　　　 <%= message %>
 　　 <% end %>
　　<% end %>
　　</div>
     <%= form_with model: @address,  url: addresses_path, local: true do |f| %>
      <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
        
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
     <% end %>

    </table></br></br>
    
    <table border="1" class="table">
          <thead class="thead-light">
            　<tr>
            　    <th>郵便番号(ハイフンなし)</th>
            　    <th>住所</th>
            　    <th>宛名</th>
            　   <th></th>
            　</tr>
            　<% @addresses.each do |address| %>
              <tr>
               <td><%= address.postal_code %></td>
               <td><%= address.address %></td>
               <td><%= address.name %></td>
               <td>
                <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %> 
                <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %>
               </td>
              </tr>    
              <% end %>
          </thead>
        </table>
   
  