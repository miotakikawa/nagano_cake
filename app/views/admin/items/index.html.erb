<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>商品一覧</strong> 
</div>
</div>
<div class="right col-3" >
 <%= link_to " + ", new_admin_item_path, class: "btn btn-light" %>
</div>

<div class="row">
 <div class="col-md-6 offset-md-3">
    <table class="table">
          <thead class="thead-light">
            　<tr>
            　    <th>商品ID</th>
            　    <th>商品名</th>
            　    <th>税抜き価格</th>
            　    <th>ジャンル</th>
            　   <th>ステータス</th>
            　</tr>
            　<% @items.each do |item| %>
              <tr>
               <td><%= item.id %></td>
               <td><%= link_to item.name, admin_item_path(item.id) %></td>
               <td><%= item.price %></td>
               <td><%= item.genre.name %></td>
               <td>
                 <% if item.is_active ==true %>
                 <p class=text-success>販売中</p>
                 <% else %>
                 <p class=text-muted>販売停止中</p>
                 <% end %>
               </td>
              </tr>    
              <% end %>
          </thead>
        </table>
   </div>
  </div>

