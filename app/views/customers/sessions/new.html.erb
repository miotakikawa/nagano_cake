<div class="container">
<div>
    <strong class="alert alert-dark " role="alert">ログイン</strong> 
</div></br></br>



<div>
    <strong class="alert alert-dark" role="alert">会員の方はこちらからログイン</strong> 
</div></br>

<%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary" %>
  </div></br></br>
<% end %>

<div>
    <strong class="alert alert-dark" role="alert">会員がお済みでない方</strong> 
</div></br>

<%= render "customers/shared/links" %>から新規登録を行ってください。
</div>
