<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 
  <body>
    <header>
    <div class="container px-lg-0">
    <div class="row">
    <div class="col-md-3 pull-right d-flex align-items-center">
    <h3>LOGO</h3>
    </div>
    <div class="col-md-9 ">
    <% if admin_signed_in? %>
    　<nav class="navbar navbar-light bg-white">
    　<div class="pull-right">
      <button type="button" class="btn btn-outline-secondary m-2">
        <%= link_to '商品一覧', admin_items_path, class:"text-body" %>
      </button>
      <button type="button" class="btn btn-outline-secondary m-2">
        <%= link_to "会員一覧"%>
      </button>
      <button type="button" class="btn btn-outline-secondary m-2">
        <%= link_to '注文履歴一覧'%>
      </button>
      <button type="button" class="btn btn-outline-secondary m-2">
        <%= link_to 'ジャンル一覧', admin_genres_path, class:"text-body" %>
      </button>
      <button type="button" class="btn btn-outline-secondary m-2">
        <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"text-body" %>
      </button>
        <form>
          <input class="form-control mr-3 col-4 ml-auto" type="text" placeholder="Search">
        </form>
      </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-light bg-white">
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to 'About', about_path, class:"text-body" %>
      </button>
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to "商品一覧", admin_items_path, class:"text-body"%>
      </button>
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to '新規登録者', new_customer_registration_path, class:"text-body"%>
      </button>
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to 'ログイン', new_customer_session_path, class:"text-body" %>
      </button>
        <form class="form-inline">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
        </form>
      </nav>
    <% end %>
    </div>
    </div>
    </div>
  </header>
  
  <main>
    <div class="container">
      <%= yield %>
    </div>
  </main>
  
  </body>
</html>
