<div class="container">
 <div class="alert alert-dark col-5 d-flex" role="alert">
    <strong><%= @customer.name %>さんの会員詳細</strong>
 </div>
</div>

<table>
 <tr>
  <td>会員ID</td>
  <td><%= @customer.id %></td>
 </tr>
 <tr>
  <td>氏名</td>
  <td><%= @customer.name %></td>
  </tr>
 <tr>
  <td>フリガナ</td>
  <td><%= @customer.name_kana %></td>
 </tr>
 <tr>
  <td>郵便番号</td>
  <td><%= @customer.postal_code %></td>
 </tr>
 <tr>
  <td>住所</td>
  <td><%= @customer.address %></td>
 </tr>
 <tr>
  <td>電話番号</td>
  <td><%= @customer.telephone_number %></td>
 </tr>
 <tr>
  <td>メールアドレス</td>
  <td><%= @customer.email %></td>
 </tr>
 <tr>
  <td>会員ステータス</td>
  <td>
   <% if @customer.is_active ==true %>
   <p class=text-success>有効</p>
   <% else %>
   <p class=text-muted>退会</p>
   <!--退会が表示されてない？-->
   <% end %>
  </td>
 </tr>
 </table></br></br>
 
 <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
 <%= link_to "注文履歴一覧を見る", orders_path(@customer.id), class: "btn btn-primary" %>