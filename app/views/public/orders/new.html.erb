<div class="container">
 <div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>注文情報入力</strong>
 </div>
</div>
        
<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>

 <strong>支払方法</strong>
  <div>
   <%= f.radio_button :payment_method, "credit_card" %>
   <%= f.label :payment_method, "クレジットカード" %>
  </div>
  <div>
   <%= f.radio_button :payment_method, "transfer" %>
   <%= f.label :payment_method, "銀行振込" %>
  </div><br><br>


 <strong>お届け先</strong>
  <div>
   <%= f.radio_button :select_address, "my_address" %>
   <%= f.label :address, "ご自身の住所" %>
   <div><%= current_customer.full_address %></div>
  </div>
 <div>
  <%= f.radio_button :select_address, "old_address" %>
  <%= f.label :address, "登録済み住所から選択" %>
  <div><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %></div>
 </div>
 <div>
  <%= f.radio_button :select_address, "new_address" %>
  <%= f.label :address, "新しいお届け先" %>
   <div class="form_group">
      <label>郵便番号（ハイフンなし）</label><br>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
    <div class="form_group">
      <label>住所</label><br>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form_group">
      <label>宛名</label><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    
    <div class="center">
      <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
    </div>
<% end %>