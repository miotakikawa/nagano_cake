<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>配送先編集</strong> 
</div>
</div>

    <table class="table">
     <%= form_with model: @address, url: address_path(@address), local: true do |f| %>
      <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name, autofocus: true %>
        
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
      </div>
     <% end %>

    </table>