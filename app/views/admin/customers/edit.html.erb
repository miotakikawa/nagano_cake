<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong><%= @customer.name %>さんの会員情報編集</strong> 
</div>
</div>

<div class="row">
 <div class="col-md-8 offset-md-3">
<%= form_with model: @customer, url: admin_customer_path(@customer), local:true do |f| %>
<table width="90%" class="table table-borderless">
 <tbody>
  <tr>
   <td>会員ID</td>
   <td><%= @customer.id %></td>
  </tr>
  <tr>
   <td>氏名</td>
   <td><%= f.text_field :last_name, class: "form-control" %></td>
   <td><%= f.text_field :first_name, class: "form-control" %></td>
  </tr>
  <tr>
   <td>フリガナ</td>
   <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
   <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
  </tr>
  <tr>
   <td>郵便番号</td>
   <td> <%= f.text_field :postal_code, class: "form-control" %></td>
  </tr>
  <tr>
   <td>住所</td>
   <td><%= f.text_field :address, class: "form-control" %></td>
  </tr>
  <tr>
   <td>電話番号</td>
   <td><%= f.text_field :telephone_number, class: "form-control" %></td>
  </tr>
  <tr>
  <tr>
   <td>メールアドレス</td>
   <td><%= f.text_field :email, class: "form-control"  %></td>
  </tr>
  <tr>
   <td>会員ステータス</td>
   <td><%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %></td>
  </tr>
 </tbody>
</table>
 
 <div class="text-center">
  <span><%= f.submit '変更を保存', class:"btn btn-success" %></span>
 </div>
<% end %>
</div>
</div>
