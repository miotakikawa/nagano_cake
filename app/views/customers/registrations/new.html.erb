<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>新規会員登録</strong> 
</div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    (姓)<%= f.text_field :last_name, autofocus: true %>
    (名)<%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true %>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.email_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)"%>
    <%= f.email_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(６文字以上)" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="col-10">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  
   <% end %>
  </div><br />


<div>
  <strong class="alert alert-dark col-5 d-flex" role="alert">既に登録済みの方</strong> 

  <%= render "customers/shared/links" %>からログインしてください。
</div>
