<div class="container">
<div class="alert alert-dark col-5 d-flex" role="alert">
    <strong>商品新規登録</strong> 
</div>
</div>

<div class="row">
 <div class="col-md-6 offset-md-3">
<%= form_with model: @item, url: admin_items_path, local:true do |f| %>
<table width="50%" class="table table-borderless">
 <tbody>
  <tr>
   <td>商品画像</td>
   <td><%= f.attachment_field :image %></td>
  </tr>
  <tr>
   <td>商品名</td>
   <td><%= f.text_field :name, class: "form-control" %></td>
  </tr>
  <tr>
   <td>商品説明</td>
   <td><%= f.text_field :introduction, class: "form-control" %></td>
  </tr>
  <tr>
   <td>ジャンル</td>
   <td> <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "カテゴリを選択してください" %></td>
  </tr>
  <tr>
   <td>税抜価格</td>
   <td><%= f.text_field :price %>円</td>
  </tr>
  <tr>
   <td>販売ステータス</td>
   <td><%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %></td>
  </tr>
 </tbody>
</table>
 
 <div class="text-center">
 <span><%= f.submit '新規登録', edit_admin_item_path, class:"btn btn-success" %></span>
 </div>
<% end %>
</div>
</div>